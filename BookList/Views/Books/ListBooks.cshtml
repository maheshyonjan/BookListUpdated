@{
}

@model List<BookList.Models.Book>

<h1>Books</h1>


<a class="btn btn-primary" asp-controller="books" asp-action="AddBook">ADD BOOK</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Aurthor</th>
            <th>ISBN</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Book in Model)
        {
            <tr>
                <td>@Book.Name</td>
                <td>@Book.Author</td>
                <td>@Book.ISBN</td>
                <td>
             
                    <a class="btn btn-primary" asp-controller="books" asp-action="EditBook" asp-route-id="@Book.Id">Edit</a>
                    <form asp-controller="books" asp-action="DeleteBook" asp-route-id="@Book.Id" style="float: right;">
                        <button onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger" >
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>